<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokeDisplayV2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextAppearance.Name" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextAppearance.Weight" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextAppearance.Type" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>